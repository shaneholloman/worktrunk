  [2m# Worktrunk Project Configuration
  [2m# Copy to: <repo>/.config/wt.toml
  [2m#
  [2m# This file defines project-specific hooks that run automatically during
  [2m# worktree operations. It should be checked into git and shared across all
  [2m# developers working on the project.
  [2m
  [2m# Available template variables (all hooks):
  [2m#   {{ repo }}              - Repository name (e.g., "my-project")
  [2m#   {{ branch }}            - Raw branch name (e.g., "feature/foo")
  [2m#   {{ branch | sanitize }} - Branch name with / and \ replaced by -
  [2m#   {{ worktree }}          - Absolute path to the worktree
  [2m#   {{ repo_root }}         - Absolute path to the repository root
  [2m#
  [2m# Merge-related hooks also support:
  [2m#   {{ target }}    - Target branch for the merge (e.g., "main")
  [2m
  [2m# Post-Create Hook
  [2m# Runs SEQUENTIALLY and BLOCKS until complete
  [2m# The worktree switch won't complete until these finish
  [2m# Commands run one after another in the worktree directory
  [2m#
  [2m# Format options:
  [2m# 1. Single string:
  [2m#    post-create = "npm install"
  [2m#
  [2m# 2. Named table (runs sequentially in declaration order):
  [2m# [post-create]
  [2m# install = "npm install --frozen-lockfile"
  [2m# build = "npm run build"
  [2m
  [2m# Post-Start Hook
  [2m# Runs in BACKGROUND as detached processes (parallel)
  [2m# Use for: uv sync, npm install, bundle install, build, dev servers, file watchers,
  [2m# downloading assets too large for git (images, ML models, binaries), long-running tasks
  [2m# The worktree switch completes immediately, these run in parallel
  [2m# Output is logged to .git/wt-logs/{branch}-{source}-post-start-{name}.log (source: user/project)
  [2m#
  [2m# Format options:
  [2m# 1. Single string:
  [2m#    post-start = "npm run dev"
  [2m#
  [2m# 2. Named table (runs in parallel):
  [2m# [post-start]
  [2m# server = "npm run dev"
  [2m# watch = "npm run watch"
  [2m
  [2m# Pre-Commit Hook
  [2m# Runs SEQUENTIALLY before committing changes during merge (blocking, fail-fast)
  [2m# All commands must exit with code 0 for commit to proceed
  [2m# Runs for both squash and no-squash merge modes
  [2m# Use for: formatters, linters, quick validation
  [2m#
  [2m# Single command:
  [2m# pre-commit = "cargo fmt -- --check"
  [2m#
  [2m# Multiple commands:
